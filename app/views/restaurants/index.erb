<h1> Restaurant Index Page </h1> 
<% if logged_in? %>
  <h2> Your Name is <%= current_user.full_name %> </h2>
<% end %>
<div id='new-restaurant'>
  <a id='add-restaurant' href='/restaurants/new'>Add</a>
</div>
<hr />
<div id='restaurant-list'>
  <ul>
    <% @restaurants.each do |restaurant| %>
      <li id='restaurant-<%= restaurant.id %>'>
        <div> 
          <div class='name'><%= restaurant.name %></div>
          <div class='controls'>
            <a data-type='html' data-id='<%=restaurant.id %>' href='/restaurants/<%= restaurant.id %>'>html</a>
            <a data-type='json' data-id='<%=restaurant.id %>' href='/restaurants/<%= restaurant.id %>'>json</a>
          </div>
        </div>
      </li>
    <% end %> 
  </ul>
</div>