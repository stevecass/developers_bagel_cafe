<form data-id="<%= restaurant.id %>" class='edit-restaurant' action='/restaurants/<%= restaurant.id %>' method='put'>
  <ul> 
    <li>
      <label for='restaurant[name]'>Name:</label>
      <input type='text' name='restaurant[name]' value="<%= restaurant.name %>">
    </li>
    <li>
      <label for='restaurant[address]'>Address:</label>
      <input type='text' name='restaurant[address]' value="<%= restaurant.address %>">
    </li>
    <li>
      <input type='submit' value='update restaurant' />
    </li>
  </ul>
</form>